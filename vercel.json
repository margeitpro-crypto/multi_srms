{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "dist/**",
          "backend/**",
          "services/**",
          "routes/**",
          "middleware/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/server.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/backend/server.ts"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}